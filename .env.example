# SF-1 Ultimate - Environment Variables Template
# Kopiere diese Datei zu .env und fülle mit echten Werten

# ==========================================
# GENERAL
# ==========================================
NODE_ENV=production
LOG_LEVEL=info

# ==========================================
# DATABASES
# ==========================================

# PostgreSQL (Auth Service)
POSTGRES_PASSWORD=CHANGE_ME_secure_random_password
DATABASE_URL=postgresql://sf1_user:${POSTGRES_PASSWORD}@postgres:5432/sf1_auth

# MongoDB (All other services)
MONGO_PASSWORD=CHANGE_ME_another_secure_password
MONGODB_URL=mongodb://sf1_admin:${MONGO_PASSWORD}@mongodb:27017

# Redis (Caching & Queue)
REDIS_PASSWORD=CHANGE_ME_redis_password
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379

# Meilisearch (Full-Text Search)
MEILISEARCH_MASTER_KEY=CHANGE_ME_min_16_chars_meilisearch_key
MEILISEARCH_HOST=http://meilisearch:7700

# ==========================================
# JWT & SECURITY
# ==========================================
JWT_SECRET=CHANGE_ME_very_long_random_string_minimum_32_characters
JWT_REFRESH_SECRET=CHANGE_ME_another_long_random_string_for_refresh
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Encryption Key (32 bytes hex)
ENCRYPTION_KEY=CHANGE_ME_64_character_hex_string_for_encryption

# ==========================================
# OAUTH PROVIDERS
# ==========================================

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-your-google-client-secret
GOOGLE_CALLBACK_URL=https://seedfinderpro.de/api/auth/google/callback

# Discord OAuth
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret
DISCORD_CALLBACK_URL=https://seedfinderpro.de/api/auth/discord/callback

# GitHub OAuth (Optional)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=https://seedfinderpro.de/api/auth/github/callback

# ==========================================
# AWS S3 (Media Storage)
# ==========================================
AWS_ACCESS_KEY_ID=AKIAIOSFODNN7EXAMPLE
AWS_SECRET_ACCESS_KEY=wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY
AWS_REGION=eu-central-1
S3_BUCKET_JOURNAL=sf1-journal-production
